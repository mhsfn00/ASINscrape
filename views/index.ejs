<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASIN Scrape</title>
    <script>
        var productList = null;

        async function getProducts() {
            loading();
            let keyword = document.getElementById('Keyword').value;
            let asin = document.getElementById('ASIN').value;

            var AJAXRequest = new XMLHttpRequest();
            let url = `http://localhost:5000/api/scrape?keyword=${keyword}`;

            AJAXRequest.open('GET', url, true);

            AJAXRequest.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    console.log("Request is finished and response is ready");
                    productList = JSON.parse(this.response);
                    showProduct(asin);
                } else {
                    console.log("readyState:", this.readyState, "status:", this.status);
                }
            }

            AJAXRequest.send();
        }

        function loading() {
            document.getElementById('RetrievedProduct').innerHTML = `
                <div class="loading">
                    <h1>LOADING</h1>
                </div>
            `
        }

        function analyzeInput(e, id) {
            if(e.key === 'Enter' && id == 'ASIN') {
                getProducts();
            } else if (e.key === 'Enter' && id == 'Keyword') {
                console.log("enter on keyword");
                document.getElementById('ASIN').focus();
            }
        }

        function showProduct(asin) {
            let productContainer = document.getElementById('RetrievedProduct');
            let matchedProduct = null;

            productList.forEach(product => {
                if (product.itemASIN == asin) {
                    matchedProduct = product;
                }
            });

            if (matchedProduct == null) {
                productContainer.innerHTML = `
                    <p>No product matches the given ASIN</p>
                `
            } else {
                productContainer.innerHTML = `
                    <p>page: ${matchedProduct.pageNumber}</p>
                    <p>Position in page: ${matchedProduct.itemIndex + 1}</p>
                    <p>Position overall: ${
                        (matchedProduct.pageNumber - 1) * 60 + (matchedProduct.itemIndex + 1)
                    }
                `
            }

            // search word: bottle

            // product 61 is the 1st of 2nd page
            // 121 1 3
            // 0 * 60 + 0 - 59
            // 1 * 60 + 60 - 119
            // 2 * 60 + 120 - 179
            // 3 * 60 + 180 - 239
            // pageNumber - 1 * 60 + itemIndex + 1
        } 
    </script>
    <style>
        * {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }

        .loading {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .input-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 30px;
            padding: 20px 400px;
        }

        #Keyword {
            height: 30px;
            font-size: 15px;
            width: 100%;
        }

        #ASIN {
            height: 30px;
            font-size: 15px;
            width: 100%;
        }

        #Scrape {
            height: 35px;
            margin: 0;
            padding: 0 15px;
        }
    </style>
</head>
<body>
    <div class="input-container">
        <input id="Keyword" placeholder="Enter a product to be searched" onkeyup="analyzeInput(event, this.id)" value="bottle"/>
        <input id="ASIN" placeholder="Amazon Standard Identification Number" onkeyup="analyzeInput(event, this.id)" value="B0C49ZKBMB"/>
        <button id="Scrape" onclick="getProducts();">Go</button>
    </div>
    <div id="RetrievedProduct">

    </div>
</body>
</html>