<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASIN Scrape</title>
    <script>
        var productList = null;

        async function getProducts() {
            loading();
            let keyword = document.getElementById('Keyword').value;
            let asin = document.getElementById('ASIN').value;

            var AJAXRequest = new XMLHttpRequest();
            let url = `http://localhost:5000/api/scrape?keyword=${keyword}`;

            AJAXRequest.open('GET', url, true);

            AJAXRequest.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    console.log("Request is finished and response is ready");
                    productList = JSON.parse(this.response);
                    showProduct(asin);
                } else {
                    console.log("readyState:", this.readyState, "status:", this.status);
                }
            }

            AJAXRequest.send();
        }

        function loading() {
            document.getElementById('RetrievedProduct').innerHTML = `
                <h1>LOADING</h1>
            `
        }

        function analyzeInput(e) {
            if(e.key === 'Enter') getProducts();
        }

        function showProduct(asin) {
            console.log(asin);
            let productContainer = document.getElementById('RetrievedProduct');
            let matchedProduct = null;

            productList.forEach(product => {
                if (product.itemASIN == asin) {
                    matchedProduct = product;
                }
            });

            if (matchedProduct == null) {
                productContainer.innerHTML = `
                    <p>No product matches the given ASIN</p>
                `
            } else {
                productContainer.innerHTML = `
                    <p>product index: ${matchedProduct.itemIndex}</p>
                    <p>page: ${matchedProduct.pageNumber}</p>
                    <p>ASIN: ${matchedProduct.itemASIN}</p>
                `
            }
